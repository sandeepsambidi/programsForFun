package trees;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.InputStreamReader;
import java.io.OutputStreamWriter;
import java.util.StringTokenizer;

public class CountBSTs {
	
	int count = 0;
	
	boolean countBST(int[] arr, int currIndex, int leftMax, int rightMax) {	
		
		if(currIndex >= arr.length) {
			return true;
		}
		
		int leftNodeIndex = currIndex*2;
		int rightNodeIndex = leftNodeIndex+1;
		boolean isLeftBST = countBST(arr, leftNodeIndex, leftMax, arr[currIndex]-1);
		boolean isRightBST = countBST(arr, rightNodeIndex, arr[currIndex]+1, rightMax);
		
		if(isLeftBST) {
			count++;
		}
		if(isRightBST) {
			count++;
		}
		if(arr[currIndex] >= leftMax && arr[currIndex]<=rightMax) {
			if(isLeftBST && isRightBST) {
				count++;
				return true;
			}
		} 
			return false;
		
	}

	public static void main(String[] args) throws Exception{
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		BufferedWriter bw = new BufferedWriter(new OutputStreamWriter(System.out));
		int tc = Integer.parseInt(br.readLine());
		while(tc>0) {
			int nodeCount = Integer.parseInt(br.readLine());
			int index = 1;
			int[] arr = new int[nodeCount+1];

			StringTokenizer st = new StringTokenizer(br.readLine());

			while(index <= nodeCount) {
				arr[index] = Integer.parseInt(st.nextToken());
				index++;
			}
			
			//System.out.println("pre = "+Arrays.toString(arr));
			
			CountBSTs obj = new CountBSTs();
			obj.countBST(arr,1, Integer.MIN_VALUE, Integer.MAX_VALUE);
			bw.write(obj.count + "\n");
			obj.count = 0;
			tc--;
		}
		bw.flush();
	}
}
