
public class User implements Runnable{

	Dustbin dustbin;
	
	User(Dustbin dustbin) {
		this.dustbin = dustbin;
	}
	@Override
	public void run() {
		synchronized (dustbin) {
			int i = 0;
			while (true) {
				if (dustbin.isFull() == true) {
					try {
						dustbin.wait();
					} catch (InterruptedException e) {
						e.printStackTrace();
					}
				} else {
					dustbin.put(Thread.currentThread().getName()+ ": d"+i);
					dustbin.notifyAll();
				}
				i++;
				Thread.sleep(2000);
			}
			
		}
		
	}
	

}
